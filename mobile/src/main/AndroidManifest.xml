<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.challdoit.pomoves"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="com.challdoit.pomoves.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SessionActivity"
            android:label="@string/app_name"/>

        <provider
            android:name=".data.PomovesProvider"
            android:authorities="com.challdoit.pomoves"/>
        <receiver
            android:name=".PomovesReceiver">
            <intent-filter>
                <action android:name="com.challdoit.pomoves.ACTION_LOCATION"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
